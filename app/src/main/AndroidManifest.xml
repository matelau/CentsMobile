<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matelau.junior.centsproject" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.matelau.junior.centsproject.Controllers.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.matelau.junior.centsproject.Controllers.JobListActivity"
            android:label="@string/title_activity_job_list"
            android:parentActivityName="com.matelau.junior.centsproject.Controllers.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.matelau.junior.centsproject.Controllers.MainActivity" />
        </activity>
        <activity
            android:name="com.matelau.junior.centsproject.Controllers.CostOfLivingActivity"
            android:label="@string/title_activity_cost_of_living" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.matelau.junior.centsproject.Controllers.JobListActivity" />
        </activity>
        <activity
            android:name="com.matelau.junior.centsproject.Controllers.SpendingBreakdown"
            android:label="@string/title_activity_spending_breakdown"
            android:parentActivityName="com.matelau.junior.centsproject.Controllers.CostOfLivingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.matelau.junior.centsproject.Controllers.CostOfLivingActivity" />
        </activity>
        <activity
            android:name="com.matelau.junior.centsproject.Controllers.TabHostActivity"
            android:label="@string/title_activity_tab_host" >
        </activity>
    </application>

</manifest>
