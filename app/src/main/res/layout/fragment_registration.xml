

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context="com.matelau.junior.centsproject.Controllers.LoginDialogFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/example_card"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        card_view:cardBackgroundColor="@color/primary">



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:padding="2dp"
            tools:context="com.matelau.junior.centsproject.Controllers.LoginDialogFragment">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/register_card"
                android:layout_margin="10dp"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:layout_weight="2.5"
                card_view:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_margin="2dp">

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="First Name"
                            android:textSize="20dp"/>
                        <EditText
                            android:layout_gravity="center"
                            android:inputType="textPersonName"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:padding="4dp"
                            android:textColor="@color/black"
                            android:background="@drawable/border_rectangle"
                            android:id="@+id/first_name"/>

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:paddingTop="5dp"
                            android:text="Last Name"
                            android:textSize="20dp"/>
                        <EditText
                            android:layout_gravity="center"
                            android:inputType="textPersonName"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:padding="4dp"
                            android:textColor="@color/black"
                            android:background="@drawable/border_rectangle"
                            android:id="@+id/last_name"/>

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Email"
                            android:paddingTop="5dp"
                            android:textSize="20dp"/>
                        <EditText
                            android:layout_gravity="center"
                            android:inputType="textEmailAddress"
                            android:layout_height="30dp"
                            android:padding="4dp"
                            android:textColor="@color/black"
                            android:background="@drawable/border_rectangle"
                            android:layout_width="fill_parent"
                            android:id="@+id/user_email"/>

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Password"
                            android:paddingTop="5dp"
                            android:textSize="20dp"/>
                        <EditText
                            android:layout_gravity="center"
                            android:inputType="textPassword"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:padding="4dp"
                            android:textColor="@color/black"
                            android:background="@drawable/border_rectangle"
                            android:id="@+id/user_password"/>

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:layout_gravity="left"
                            android:text="Confirm Password"
                            android:textSize="20dp"/>
                        <EditText
                            android:paddingTop="5dp"
                            android:layout_gravity="center"
                            android:inputType="textPassword"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:padding="4dp"
                            android:textColor="@color/black"
                            android:background="@drawable/border_rectangle"
                            android:id="@+id/confirm_password"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:id="@+id/registration_msg"
                        android:text="All Fields are Required"/>
                    <!--</LinearLayout>-->

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="8"
                android:weightSum="2">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cancel"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:id="@+id/login_cancel"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textSize="28dp"
                    android:text="Register"
                    android:id="@+id/register_submit"
                    android:layout_margin="15dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>

