<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.matelau.junior.centsproject.Controllers.Design.CostOfLivingFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/col_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:elevation="30dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">

        <include layout="@layout/col_vis"
            android:layout_alignParentTop="true"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"></include>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:id="@+id/location_bar"
            android:weightSum="3"
            android:layout_weight="9">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/col_location1"
                android:text="Loading"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:padding="2dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="4dp"
                android:background="@drawable/compliment_rectangle"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/second_location"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/col_location2"
                    android:text="Loading"
                    android:padding="2dp"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="4dp"
                    android:background="@drawable/grey_rectangle"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/plus_loc"
                android:layout_weight="1">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/plus_icon">
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle"
                        android:id="@+id/circle"/>
                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_action_new"
                        android:layout_above="@+id/circle"
                        android:layout_alignParentTop="true" />

                </FrameLayout>
            <!--<ImageButton-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:padding="5dp"-->
                <!--android:id="@+id/plus_icon"-->
                <!--android:src="@drawable/ic_action_new"-->
                <!--android:background="@drawable/circle"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_centerVertical="true" />-->
            </RelativeLayout>

        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
