<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.matelau.junior.centsproject.Controllers.CostOfLivingFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/col_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:elevation="30dp">

        <include layout="@layout/col_vis"
            android:layout_alignParentTop="true"
            android:layout_height="match_parent"
            android:layout_width="match_parent"></include>


    </android.support.v7.widget.CardView>
    <ImageButton
        android:id="@+id/go_to_jobList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        android:background="@drawable/reverse_circle_arrow"
        android:layout_below="@+id/col_card_view"
        android:elevation="20dp"
        android:layout_alignLeft="@+id/col_card_view" />

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/loc_card"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/col_card_view"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:elevation="50dp">
    <TextView
        android:id="@+id/col_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@android:color/black"
        android:text="test"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        </TextView>


    </android.support.v7.widget.CardView>


    <ImageButton
        android:id="@+id/go_to_spending"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:background="@drawable/circle_arrow"
        android:layout_below="@+id/col_card_view"
        android:elevation="20dp"
        android:layout_alignEnd="@+id/col_card_view" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:background="@drawable/rectangle"
        android:layout_below="@+id/go_to_spending"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
