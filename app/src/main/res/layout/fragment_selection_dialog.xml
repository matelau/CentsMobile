<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:id="@+id/selection_instructions"
        android:text="@string/state_instructions"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State - 1"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:id="@+id/stateTextView"
        android:layout_gravity="center"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/state_spinner1"
        android:elevation="10dp"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_rectangle"
        android:layout_margin="5dp"/>
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ac_view1"
        android:elevation="10dp"
        android:visibility="gone"
        android:padding="5dp"
        android:hint="@string/career_hint"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_rectangle"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City - 1"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:id="@+id/optionTextView1"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/option_input1"
        android:elevation="10dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_rectangle"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vs"
        android:text="@string/vs"
        android:gravity="center"
        android:textColor="@color/primary"
        android:visibility="gone"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State - 2"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:id="@+id/stateTextView2"
        android:visibility="gone"
        android:layout_gravity="center"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/state_spinner2"
        android:elevation="10dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:background="@drawable/rounded_rectangle"/>

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ac_view2"
        android:elevation="10dp"
        android:visibility="gone"
        android:padding="5dp"
        android:hint="@string/career_hint"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_rectangle"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City - 2"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:id="@+id/optionTextView2"
        android:visibility="gone"
        android:layout_gravity="center"/>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/option_input2"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:background="@drawable/rounded_rectangle"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/city_add">
        <View
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/circle"
            android:id="@+id/circle1"/>
        <View
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_action_new"
            android:id="@+id/circle"
            android:layout_above="@+id/circle1"
            android:layout_alignParentTop="true" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:weightSum="2">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/nav_ripple"
            android:textColor="@color/text_primary"
            android:id="@+id/cancel_select"
            android:layout_margin="5dp"
            android:text="Cancel"
            android:layout_weight="1"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/nav_ripple"
            android:textColor="@color/text_primary"
            android:id="@+id/submit_select"
            android:layout_margin="5dp"
            android:text="Submit"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>



