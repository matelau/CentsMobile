<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.matelau.junior.centsproject.Controllers.MainActivity"
    android:id="@+id/search">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/state_text_view"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:id="@+id/stateTextView"
        android:layout_above="@+id/state_spinner"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/state_spinner"
        android:layout_above="@+id/cityTextView"
        android:elevation="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_rectangle"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/city_text_view"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:id="@+id/cityTextView"
        android:layout_above="@+id/city_spinner"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/city_spinner"
        android:layout_above="@+id/textView"
        android:elevation="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_rectangle"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/occupation_text_view"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:id="@+id/textView"
        android:layout_above="@+id/search_bar"
        android:layout_centerHorizontal="true" />

    <include
        android:id="@+id/search_bar"
        layout = "@layout/search_bar"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="145dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:contentDescription="@string/submit_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id ="@+id/search_button"
        android:background="@drawable/circle_arrow"
        android:layout_marginBottom="71dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
