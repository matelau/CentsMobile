<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.matelau.junior.centsproject.Views.VisualizationFragments.SpendingBreakdown.SpendingBreakdownModDialogFragment"
    >

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/job_detail_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:elevation="30dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="50dp" android:weightSum="2"
            android:layout_margin="10dp">
            <include layout="@layout/numeric_field"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="fill_parent"></include>
             <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/attr_category"
                android:layout_marginStart="25dp"
                android:gravity="center_vertical"
                android:textColor="@color/primary"
                android:hint="Category"
                android:layout_weight="1"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>